<style>
    /* KECK Header Styles */

    /* Header Topbar */
    .keck-header-topbar {
        background-color: var(--keck-primary);
        color: white;
        padding: 0.8rem 0;
        font-size: 1.3rem;
    }

    .keck-header-topbar__content {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .keck-header-topbar__login {
        color: white;
        text-decoration: none;
        padding: 0.5rem 0;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .keck-header-topbar__login:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
    }

    /* Main Header */
    .keck-header-main {
        background-color: white;

        border-bottom: 1px solid #e5e5e5;
    }

    .keck-header-main__content {
        max-width: 1800px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 90px;
    }

    .keck-header-main__left {
        display: flex;
        align-items: center;
        gap: 3rem;
    }


    .keck-header-main__logo a {
        text-decoration: none;
        display: block;
        line-height: 0;
    }

    .keck-header-main__logo img {
        max-height: 60px;
        width: auto;
    }

    .keck-header-main__phone {
        color: var(--keck-black);
        text-decoration: none;
        font-weight: 600;
        font-size: 22px;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        transition: color 0.3s ease;
        padding-inline:1rem;
        border-left: 1px solid var(--keck-border-color);
        border-right: 1px solid var(--keck-border-color);
        margin-left: 2rem;
        white-space: nowrap;
        height: 90px;
        line-height: 90px;

            @media screen and (min-width: 992px) {
                font-size: 28px;
                padding-inline: 2.5rem;
            }
    }


    .keck-header-main__phone:hover {
        color: var(--keck-secondary);
    }


    .keck-header-menu-entry {
        border-left: 1px solid var(--keck-border-color);
        display: flex;
        align-items: center;
        height: 91px;
        line-height: 91px;
        text-align: center;
        padding-inline: 1rem;
        justify-content: center;

          @media screen and (min-width: 992px) {
                   padding-inline: 2.5rem;
          }
    }

    #cart-icon-bubble{
        background-color: var(--keck-primary-light);
    }


    .keck-header-main__phone svg {
        width: 18px;
        height: 18px;
    }

    /* Navigation - versteckt auf Startseite */
    .keck-header-navigation {
        display: none;
    }

    .keck-header-navigation.show {
        display: flex;
        gap: 2rem;
    }

    .keck-header-navigation a {
        color: var(--keck-primary);
        text-decoration: none;
        font-weight: 600;
        font-size: 1.4rem;
        padding: 0.8rem 1.2rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
    }

    .keck-header-navigation a:hover {
        background-color: #f8f9fa;
        color: var(--keck-secondary);
    }

    .keck-header-main__right {
        display: flex;
        align-items: center;
    }


    .keck-header-icon svg {
        width: 20px;
        height: 20px;
    }

    /* Cart Count */
    .keck-cart-count {
        position: absolute;
        top: -8px;
        right: -8px;
        background-color: var(--keck-secondary);
        color: var(--keck-primary);
        border-radius: 50%;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        font-weight: bold;
        min-width: 20px;
    }

    /* Mobile Styles */
    @media screen and (max-width: 768px) {
        .keck-header-topbar__content,
        .keck-header-main__content {
            padding: 0 1rem;
        }

        .keck-header-main__left {
            gap: 1.5rem;
        }

        .keck-header-main__phone {
            font-size: 1.2rem;
        }

        .keck-header-main__phone span {
            display: none;
        }

        .keck-header-navigation {
            display: none !important;
        }

        .keck-header-main__logo img {
            max-height: 45px;
        }
    }
</style>

<!-- KECK Header Structure -->
