<!-- KECK Header Structure -->
<div class="keck-header">

    <!-- Topbar with Login -->
    <div class="keck-header-topbar">
        <div class="keck-header-topbar__content">
            {%- if shop.customer_accounts_enabled -%}
                <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="keck-header-topbar__login">
                    <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M13.5 12V9C13.5 8.20435 13.8161 7.44129 14.3787 6.87868C14.9413 6.31607 15.7044 6 16.5 6H27C27.7956 6 28.5587 6.31607 29.1213 6.87868C29.6839 7.44129 30 8.20435 30 9V27C30 27.7956 29.6839 28.5587 29.1213 29.1213C28.5587 29.6839 27.7956 30 27 30H16.5C15.7044 30 14.9413 29.6839 14.3787 29.1213C13.8161 28.5587 13.5 27.7956 13.5 27V24" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M4.5 18H24L19.5 13.5" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M19.5 22.5L24 18" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>

                    {%- if customer -%}
                        Mein Konto
                    {%- else -%}
                        Login / Registrierung
                    {%- endif -%}
                </a>
            {%- endif -%}
        </div>
    </div>

    <!-- Main Header -->
    <div class="keck-header-main">
        <div class="keck-header-main__content">

            <!-- Left Side: Logo + Phone -->
            <div class="keck-header-main__left">

                <!-- Logo -->
                <div class="keck-header-main__logo">
                    <a href="{{ routes.root_url }}">
                        <svg width="245" height="65" viewBox="0 0 245 65" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M51.6971 40.3904V24.231L40.2597 12.7936H24.1003L12.6628 24.231V40.3904L24.1003 51.8278H40.2597L51.6971 40.3904ZM46.2562 38.1356L38.0049 46.3869H26.3387L18.0874 38.1356V26.4694L26.3387 18.2182H38.0049L46.2562 26.4694V38.1356Z" fill="#0061A1"/>
                            <path d="M64.36 45.6353V18.9698L45.5046 0.130707H18.8554L0 18.9698V45.6353L18.8554 64.4907H45.5209L64.3763 45.6353H64.36ZM55.4878 41.959L41.8283 55.6185H22.5154L8.85583 41.959V22.6461L22.5154 8.98654H41.8283L55.4878 22.6461V41.959Z" fill="#0061A1"/>
                            <path d="M245.3 64.4907V0H50.8147L68.1342 17.3359V47.1385L50.8147 64.4743H245.3V64.4907ZM102.659 27.2864L116.449 54.4911H105.012L95.9925 36.1749L89.5058 44.6876V54.4748H79.1468V9.99957H89.5058V30.5379L103.868 9.99957H115.763L102.659 27.2864ZM151.921 54.4911H121.286V9.99957H151.921V19.1495H131.841V27.2211H147.918V36.2403H131.841V45.3248H151.921V54.4748V54.4911ZM191.217 45.717C191.217 51.6318 188.358 54.4911 182.443 54.4911H166.545C160.63 54.4911 157.771 51.6318 157.771 45.717V18.7737C157.771 12.7936 160.696 9.99957 166.61 9.99957H182.508C188.423 9.99957 191.217 12.7936 191.217 18.7737V26.5348H180.662V20.3749C180.662 19.4273 180.352 19.1658 179.453 19.1658H169.535C168.653 19.1658 168.326 19.4273 168.326 20.3749V44.1484C168.326 45.0307 168.636 45.3575 169.535 45.3575H179.453C180.335 45.3575 180.662 45.0471 180.662 44.1484V37.9232H191.217V45.7497V45.717ZM221.788 27.2864L235.578 54.4911H224.141L215.121 36.1749L208.635 44.6876V54.4748H198.276V9.99957H208.635V30.5379L222.997 9.99957H234.892L221.788 27.2864Z" fill="#0061A1"/>
                        </svg>
                    </a>
                </div>

                <!-- Phone Number -->
                <a href="tel:+4907853464" class="keck-header-main__phone">
                    <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M7.5 6H13.5L16.5 13.5L12.75 15.75C14.3564 19.0073 16.9927 21.6436 20.25 23.25L22.5 19.5L30 22.5V28.5C30 29.2956 29.6839 30.0587 29.1213 30.6213C28.5587 31.1839 27.7956 31.5 27 31.5C21.1489 31.1444 15.6302 28.6597 11.4852 24.5148C7.34026 20.3698 4.85557 14.8511 4.5 9C4.5 8.20435 4.81607 7.44129 5.37868 6.87868C5.94129 6.31607 6.70435 6 7.5 6Z" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M22.5 10.5C23.2956 10.5 24.0587 10.8161 24.6213 11.3787C25.1839 11.9413 25.5 12.7044 25.5 13.5" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M22.5 4.5C24.8869 4.5 27.1761 5.44821 28.864 7.13604C30.5518 8.82387 31.5 11.1131 31.5 13.5" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>

                    <span>+49 (0) 7853 464</span>
                </a>

            </div>

            <!-- Center Navigation (hidden on homepage) -->
            <nav class="keck-header-navigation" id="main-navigation">
                <a href="{{ collections['baumaschinen'].url | default: '/collections/baumaschinen' }}">BAUMASCHINEN</a>
                <a href="{{ collections['anhaenger'].url | default: '/collections/anhaenger' }}">ANHÄNGER</a>
                <a href="{{ pages['ueber-uns'].url | default: '/pages/ueber-uns' }}">ÜBER UNS</a>
                <a href="{{ pages['ankauf'].url | default: '/pages/ankauf' }}">ANKAUF</a>
                <a href="{{ pages['service'].url | default: '/pages/service' }}">SERVICE</a>
                <a href="{{ pages['kontakt'].url | default: '/pages/kontakt' }}">KONTAKT</a>
            </nav>

            <!-- Right Side: Search + Cart -->
            <div class="keck-header-main__right">

                <!-- Search Icon -->
                <a href="{{ routes.search_url }}" class="keck-header-menu-entry" aria-label="Suche">
                    <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4.5 15C4.5 16.3789 4.77159 17.7443 5.29927 19.0182C5.82694 20.2921 6.60036 21.4496 7.57538 22.4246C8.55039 23.3996 9.70791 24.1731 10.9818 24.7007C12.2557 25.2284 13.6211 25.5 15 25.5C16.3789 25.5 17.7443 25.2284 19.0182 24.7007C20.2921 24.1731 21.4496 23.3996 22.4246 22.4246C23.3996 21.4496 24.1731 20.2921 24.7007 19.0182C25.2284 17.7443 25.5 16.3789 25.5 15C25.5 13.6211 25.2284 12.2557 24.7007 10.9818C24.1731 9.70791 23.3996 8.55039 22.4246 7.57538C21.4496 6.60036 20.2921 5.82694 19.0182 5.29926C17.7443 4.77159 16.3789 4.5 15 4.5C13.6211 4.5 12.2557 4.77159 10.9818 5.29926C9.70791 5.82694 8.55039 6.60036 7.57538 7.57538C6.60036 8.55039 5.82694 9.70791 5.29927 10.9818C4.77159 12.2557 4.5 13.6211 4.5 15Z" stroke="black" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M31.5 31.5L22.5 22.5" stroke="black" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>

                </a>

                <!-- Cart Icon -->
                <a href="{{ routes.cart_url }}" class="keck-header-menu-entry" id="cart-icon-bubble" aria-label="Warenkorb">
                    <svg width="36" height="36" viewBox="0 0 36 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 28.5C6 29.2956 6.31607 30.0587 6.87868 30.6213C7.44129 31.1839 8.20435 31.5 9 31.5C9.79565 31.5 10.5587 31.1839 11.1213 30.6213C11.6839 30.0587 12 29.2956 12 28.5C12 27.7044 11.6839 26.9413 11.1213 26.3787C10.5587 25.8161 9.79565 25.5 9 25.5C8.20435 25.5 7.44129 25.8161 6.87868 26.3787C6.31607 26.9413 6 27.7044 6 28.5Z" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M22.5 28.5C22.5 29.2956 22.8161 30.0587 23.3787 30.6213C23.9413 31.1839 24.7044 31.5 25.5 31.5C26.2956 31.5 27.0587 31.1839 27.6213 30.6213C28.1839 30.0587 28.5 29.2956 28.5 28.5C28.5 27.7044 28.1839 26.9413 27.6213 26.3787C27.0587 25.8161 26.2956 25.5 25.5 25.5C24.7044 25.5 23.9413 25.8161 23.3787 26.3787C22.8161 26.9413 22.5 27.7044 22.5 28.5Z" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M25.5 25.5H9V4.5H6" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M9 7.5L30 9L28.5 19.5H9" stroke="#F7BF06" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>

                    {%- if cart != empty -%}
                        <span class="keck-cart-count">{{ cart.item_count }}</span>
                    {%- endif -%}
                </a>

            </div>

        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Show navigation on all pages except homepage
        if (window.location.pathname !== '/') {
            const nav = document.getElementById('main-navigation');
            if (nav) {
                nav.classList.add('show');
            }
        }
    });
</script>

