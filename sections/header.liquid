                    </a>
                </div>

                <!-- Phone Number -->
                <a href="tel:+4907853464" class="keck-header-main__phone">
                    <img src="/assets/icon-phone.svg">
                    <span>+49 (0) 7853 464</span>
                </a>

            </div>

            <!-- Center Navigation (hidden on homepage) -->
            <nav class="keck-header-navigation" id="main-navigation">
                <a href="{{ collections['baumaschinen'].url | default: '/collections/baumaschinen' }}">BAUMASCHINEN</a>
                <a href="{{ collections['anhaenger'].url | default: '/collections/anhaenger' }}">ANHÄNGER</a>
                <a href="{{ pages['ueber-uns'].url | default: '/pages/ueber-uns' }}">ÜBER UNS</a>
                <a href="{{ pages['ankauf'].url | default: '/pages/ankauf' }}">ANKAUF</a>
                <a href="{{ pages['service'].url | default: '/pages/service' }}">SERVICE</a>
                <a href="{{ pages['kontakt'].url | default: '/pages/kontakt' }}">KONTAKT</a>
            </nav>

            <!-- Right Side: Search + Cart -->
            <div class="keck-header-main__right">

                <!-- Search Icon -->
                <a href="{{ routes.search_url }}" class="keck-header-menu-entry" aria-label="Suche">
                    <img src="/assets/icon-search.svg">
                </a>

                <!-- Cart Icon -->
                <a href="{{ routes.cart_url }}" class="keck-header-menu-entry" id="cart-icon-bubble" aria-label="Warenkorb">
                    <img src="/assets/icon-cart.svg">
                    {%- if cart != empty -%}
                        <span class="keck-cart-count">{{ cart.item_count }}</span>
                    {%- endif -%}
                </a>

            </div>

        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Show navigation on all pages except homepage
        if (window.location.pathname !== '/') {
            const nav = document.getElementById('main-navigation');
            if (nav) {
                nav.classList.add('show');
            }
        }
    });
</script>

