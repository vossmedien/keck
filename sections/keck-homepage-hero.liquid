<section class="keck-homepage-hero">
    <div class="keck-homepage-hero__container">
        <div class="keck-homepage-hero__grid">

            <!-- Baumaschinen Card -->
            <div class="keck-homepage-hero__card keck-homepage-hero__card--baumaschinen">

                <!-- Headline -->
                <h2 class="keck-homepage-hero__title keck-homepage-hero__title--baumaschinen">
                    {{ section.settings.baumaschinen_title | default: 'BAUMASCHINEN' }}
                </h2>

                <!-- Image with Button -->
                <div class="keck-homepage-hero__image-container">
                    {%- if section.settings.baumaschinen_image != blank -%}
                        <img
                                src="{{ section.settings.baumaschinen_image | image_url: width: 800 }}"
                                alt="Baumaschinen"
                                class="keck-homepage-hero__image"
                                loading="lazy"
                        >
                    {%- endif -%}

                    <!-- Button on Image -->
                    <div class="baumaschinen--button">
                        <a
                                href="/collections/baumaschinen"
                                class="btn btn-lg btn-secondary"
                        >

                            <span>{{ section.settings.baumaschinen_button_text | default: 'Zu den Baumaschinen' }}</span>
                            <svg class="btn-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Description below image -->
                <p class="keck-homepage-hero__description keck-homepage-hero__description--baumaschinen">
                    {{ section.settings.baumaschinen_description | default: 'Entdecken Sie unsere große Auswahl an hochwertigen Baumaschinen für alle Ihre Bauprojekte. Von Baggern bis hin zu Radladern - wir haben die richtige Maschine für Sie.' }}
                </p>

            </div>

            <!-- Anhänger Card -->
            <div class="keck-homepage-hero__card keck-homepage-hero__card--anhaenger">

                <!-- Headline -->
                <h2 class="keck-homepage-hero__title keck-homepage-hero__title--anhaenger">
                    {{ section.settings.anhaenger_title | default: 'ANHÄNGER' }}
                </h2>

                <!-- Image with Button -->
                <div class="keck-homepage-hero__image-container">
                    {%- if section.settings.anhaenger_image != blank -%}
                        <img
                                src="{{ section.settings.anhaenger_image | image_url: width: 800 }}"
                                alt="Anhänger"
                                class="keck-homepage-hero__image"
                                loading="lazy"
                        >
                    {%- endif -%}

                    <!-- Button on Image -->
                    <div class="anhaenger--button">
                        <a
                                href="/collections/anhaenger"
                                class="btn btn-lg btn-primary"
                        >

                            <span>{{ section.settings.anhaenger_button_text | default: 'Zu den Anhängern' }}</span>
                            <svg class="btn-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Description below image -->
                <p class="keck-homepage-hero__description keck-homepage-hero__description--anhaenger">
                    {{ section.settings.anhaenger_description | default: 'Robuste und zuverlässige Anhänger für Transport und Logistik. Unsere Anhänger sind perfekt für gewerbliche und private Nutzung geeignet.' }}
                </p>

            </div>

        </div>
    </div>
</section>

{% schema %}
{
  "name": "Keck Homepage Hero",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Baumaschinen Section"
    },
    {
      "type": "text",
      "id": "baumaschinen_title",
      "label": "Baumaschinen Titel",
      "default": "BAUMASCHINEN"
    },
    {
      "type": "textarea",
      "id": "baumaschinen_description",
      "label": "Baumaschinen Beschreibung",
      "default": "Entdecken Sie unsere große Auswahl an hochwertigen Baumaschinen für alle Ihre Bauprojekte. Von Baggern bis hin zu Radladern - wir haben die richtige Maschine für Sie."
    },
    {
      "type": "image_picker",
      "id": "baumaschinen_image",
      "label": "Baumaschinen Hintergrundbild"
    },
    {
      "type": "text",
      "id": "baumaschinen_button_text",
      "label": "Baumaschinen Button Text",
      "default": "Zu den Baumaschinen"
    },
    {
      "type": "header",
      "content": "Anhänger Section"
    },
    {
      "type": "text",
      "id": "anhaenger_title",
      "label": "Anhänger Titel",
      "default": "ANHÄNGER"
    },
    {
      "type": "textarea",
      "id": "anhaenger_description",
      "label": "Anhänger Beschreibung",
      "default": "Robuste und zuverlässige Anhänger für Transport und Logistik. Unsere Anhänger sind perfekt für gewerbliche und private Nutzung geeignet."
    },
    {
      "type": "image_picker",
      "id": "anhaenger_image",
      "label": "Anhänger Hintergrundbild"
    },
    {
      "type": "text",
      "id": "anhaenger_button_text",
      "label": "Anhänger Button Text",
      "default": "Zu den Anhängern"
    }
  ],
  "presets": [
    {
      "name": "Keck Homepage Hero"
    }
  ]
}
{% endschema %}